<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="item_style">
        <item name="android:background">@drawable/shape_item</item>
        <item name="android:padding">16dp</item>
        <item name="android:layout_marginTop">16dp</item>
        <item name="android:layout_marginHorizontal">16dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:orientation">vertical</item>
    </style>

    <style name="item_text" parent="Widget.AppCompat.TextView">
        <item name="android:layout_marginVertical">12dp</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/total_black</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>
</resources>